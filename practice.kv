WindowManager:
    UnitScreen:
    ChoiceScreen:
<UnitScreen>:
    name: "first"
    rows: 3
    cols:3

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        Label:
            id:Title
            text: "Choose the unit you want to review"
            halign: 'right'
            font_size: 32
            size_hint:(1, .15)
            background_color:(.1,.3,.8, 1)
        GridLayout:
            rows:3
            cols:4

            Button:
                id: unit1
                text: "Scientific Method, Cells"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(1)
                on_release: app.root.current = "second"
                background_color: (.1,.9,.1,1)


            Button:
                id: unit2
                text: "Nutrition, Respiration, Photosynthesis"

                font_size: 18
                size_hint:(.2,.2)
                halign: 'auto'
                on_press: root.unitchoice(2)
                on_release: app.root.current = 'second'
                background_color:(.1,.1,.99,1)

            Button:
                id: unit3
                text: "Disease"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(3)
                on_release: app.root.current = 'second'
                background_color:(.4,.1,.4,1)

            Button:
                id: unit4
                text: "Human Body"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(4)
                on_release: app.root.current = 'second'
                background_color:(.1,.9,.4,1)

            Button:
                id: unit5
                text: "Reproduction"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(5)
                on_release: app.root.current = 'second'
                background_color:(.9,.2,.3,1)

            Button:
                id: unit6
                text: "DNA"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(6)
                on_release: app.root.current = 'second'
                background_color:(.2,.1,.9,1)

            Button:
                id: unit7
                text: "Evolution"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(7)
                on_release: app.root.current = 'second'
                background_color:(.4,.7,.4,1)

            Button:
                id: unit8
                text: "Ecology"
                font_size: 32
                size_hint:(.2,.2)
                on_press: root.unitchoice(8)
                on_release: app.root.current = 'second'
                background_color:(.3,.8,.8,1)

<ChoiceScreen>:
    name: "second"
    GridLayout:
        cols:1
        rows:5
        GridLayout:
            cols:3
            row:1

            Button:
                id: word
                text: "Give word"
                font_size: 18
                background_color:(.9,.8,.7,1)
                #call function using the key
                on_press: root.reviewword()

            Button:
                id: definition
                text: "Give definition"
                font_size: 18
                #call function using the definition
                on_press: root.reviewdef()

            Button:
                id: back
                text: "back"
                color: (.1,.9,.1,1)
                font_size:18
                on_release: app.root.current = "first"
                on_release: root.clear()
        Label:
            id: prompt
            background_color: (.3,.3,.9,1)
            font_size: 18
            text: ' '


        TextInput:
            id:write
            hint_text:'type answer here'
            text: ' '

        Label:
            id: answer
            color: (.9,.9,.9,0)
            text: ''


        GridLayout:
            cols:3
            rows:1

            Button:
                id :Reveal
                font_size: 18
                background_color: (.1,.3,.9,1)
                text: 'Hold For Answer'
                on_press: root.reveal()
                on_release: root.hide()
                on_release: root.cleartext()
                on_release:root.gettexts()
                on_release: root.check(write.text, answer.text)

            Button:
                id: addscore
                text: "Add point"
                font_size: 18
                background_color: (.5,.9,.1,1) # green
                on_press:
                    root.addpoint()
            Label:
                id: score
                font_size: 18
                background_color:(.9,.1,.1, 1)
                text: '0'
